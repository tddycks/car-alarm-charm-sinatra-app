<h4>Report a Car Alarm</h4>

<% if flash.has?(:message) %>
  <h4><%= flash[:message] %></h4>
<% end %>

<form action="/events" method="POST">

<label for="address">Address: </label>
<input type="text" name="address" id="address">


<label for="car_model">Car Model: </label>
<input type="text" name="car_model" id="car_model">

<label for="license_plate">License Plate Number: </label>
<input type="text" name="license_plate" id="license_plate"><br>

Borough: 
<select name="borough">
  <option value="brooklyn">Brooklyn</option>
  <option value="bronx">Bronx</option>
  <option value="manhattan">Manhattan</option>
  <option value="staten_island">Staten Island</option>
  <option value="queens">Queens</option>
</select>

<input type="submit" value="Report Car Alarm">


</form>